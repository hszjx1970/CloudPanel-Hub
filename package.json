{
  "name": "cloud-transfer-hub",
  "version": "2.0.0",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently -k \"npm:dev\" \"npm:dev:electron\"",
    "dev": "vite",
    "dev:electron": "electron .",
    "build": "tsc && vite build",
    "electron:package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^0.11.3",
    "html5-qrcode": "^2.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.yourname.cloudtransferhub",
    "productName": "Cloud Transfer Hub",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/icon.png"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}