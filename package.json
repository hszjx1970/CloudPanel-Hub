{
  "name": "cloud-transfer-hub",
  "version": "1.0.0",
  "description": "A desktop application to manage file transfers between various cloud storage services, built with Electron and React.",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "cloud",
    "transfer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.cloudtransferhub",
    "productName": "Cloud Transfer Hub",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist",
      "!.*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
